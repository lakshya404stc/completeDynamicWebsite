


<div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-indicators">

    {{#each slider}}
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{@index}}" class="{{this.status}}" aria-current="true" aria-label="Slide 1"></button>
    {{/each}}

  </div>
  <div class="carousel-inner"></div>
  {{#each slider}}
    <div class="carousel-item {{this.status}}">
      <img src="{{this.imgUrl}}" class="d-block w-100 slider-size" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>{{this.heading}}</h5>
        <p>{{this.discription}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>